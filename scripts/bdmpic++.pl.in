#!@PERL_EXECUTABLE@ -w

die "bdmpic++: fatal error: no input files.\n" unless @ARGV > 0;

$PREFIX = "@CMAKE_INSTALL_PREFIX@";
$CXX    = "@CMAKE_CXX_COMPILER@";

$args = join(' ', @ARGV);
$cmd = "$CXX -pthread $args -I$PREFIX/include/bdmpi -L$PREFIX/lib/bdmpi -lbdmpi -lGKlib -lrt -lm -ldl";
print "bdmpic++: $cmd\n";
`$cmd`;

